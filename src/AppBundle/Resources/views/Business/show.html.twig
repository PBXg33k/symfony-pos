{% extends 'AppBundle::base.html.twig' %}

{% block body -%}
    <h1>{{ 'business.labels.self'|trans }} </h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{ 'entity.labels.name'|trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'entity.labels.createdAt'|trans }}</th>
                <td>{{ entity.createdAt| localizeddate('short','short') }}</td>
            </tr>
            <tr>
                <th>{{ 'entity.labels.updatedAt'|trans }}</th>
                <td>{{ entity.updatedAt| localizeddate('short','short') }}</td>
            </tr>
            <tr>
                <th>{{ 'data.labels.city'|trans }}</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>{{ 'data.labels.street'|trans }}</th>
                <td>{{ entity.street }}</td>
            </tr>
            <tr>
                <th>{{ 'data.labels.phone'|trans }}</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>{{ 'data.labels.email'|trans }}</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>{{ 'data.labels.initDate'|trans }}</th>
                <td>{{ entity.initDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('business') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('business_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>

    <div class="row" id="bottom_bar">
        <div class="col-xs-12">

            <button class="btn btn-primary" id="editEntity" style="width: 32%"> {{ 'crud.labels.edit' | trans }} </button>
            <button class="btn btn-default" id="goBack" style="width: 32%"> {{ 'Go back' | trans }}  </button>
            <button class="btn btn-danger" id="deleteEntity" style="width: 32%"> {{ 'Delete' | trans }}  </button>

        </div>
    </div>
{% endblock %}
