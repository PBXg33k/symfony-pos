{% extends 'AppBundle::base.html.twig' %}



{% block body -%}

    {% block body_title %}

    {% endblock %}


    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="codeReader">{{ 'search.labels.code' | trans }}</label>
                <input type="text" class="form-control" id="codeReader" placeholder="{{ 'search.labels.codePlaceholder' | trans }}">
            </div>

        </div>
    </div>

    {{ form_start(form) }}



    {% block items %}

    {% endblock %}



    <div class="row">
        <div class="col-lg-12">
            <a  id="addItem"> <span  class="glyphicon glyphicon-plus" aria-hidden="true"></span> </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-4 col-lg-3 col-xs-12">
            {{ form_row(form.person) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-offset-4 col-lg-3 col-xs-12">
            {{ form_row(form.cash) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-offset-4 col-lg-3 col-xs-12">
        {{ form_row(form.total) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-4 col-lg-3 col-xs-12">
            {{ form_row(form.submit) }}
        </div>
    </div>

    {{ form_row(form._token) }}
    {{ form_end(form) }}


    {% block delete_form %}

    {% endblock %}

    {% block bottom_bar %}
        <div class="row" id="bottom_bar">
            <div class="col-xs-12">

                <button class="btn btn-primary" id="saveEntity" > {{ 'Save' | trans }} </button>
                <button class="btn btn-default" id="goBack" > {{ 'Dismiss' | trans }}  </button>

            </div>
        </div>
    {% endblock %}

    {% block modal_delete %}

    {% endblock %}


{% endblock %}
