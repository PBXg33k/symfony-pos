{% extends 'AppBundle::base.html.twig' %}

{% block body -%}
    <h1>{{ 'report.labels.self'|trans }} </h1>
    {% if form is defined %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    {% endif %}
    <table class="records_list table">
        <thead>
            <tr>
                <th class="row_">{{ 'product.labels.self' | trans }}</th>
                <th class="row_">{{ 'report.labels.cost' | trans }}</th>
                <th class="row_">{{ 'report.labels.income' | trans }}</th>
                <th class="row_">{{ 'report.labels.profit' | trans }}</th>

            </tr>
        </thead>
        <tbody>

        {% for entity in entities %}
            <tr>

                <td class="row_">{{ entity.0.product.name }}</td>
                <td class="row_">{{ entity.cost |   localizednumber('currency')}}</td>
                <td class="row_">{{ entity.income  | localizednumber('currency')}}</td>
                <td class="row_">{{ entity.profit  | localizednumber('currency')}}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    {% endblock %}
